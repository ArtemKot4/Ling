{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "./out",
		"lib": ["ES2020"],
		"sourceMap": true,
		"rootDir": "./src",
		"strict": false,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
        "experimentalDecorators": true
	},
	"include": ["./src"],
	"exclude": ["node_modules", ".vscode-test"]
}
